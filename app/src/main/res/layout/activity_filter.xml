<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    tools:context="com.yonimor.sporteam.sporteam.Filter">

    <TextView
        android:id="@+id/filterHeadLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:text="@string/filterHeadLine"
        style="@style/Labs"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/myGames_cb_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/myGames_lab_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/myGames" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/gameSoccer_cb_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/soccer_lab_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/myGames" />
    </LinearLayout>


</LinearLayout>
